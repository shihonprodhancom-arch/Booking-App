<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvReceptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reception Dashboard"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnNewBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Booking"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnBookingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking List"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnCheckIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check-In"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnCheckOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check-Out"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnAvailableRooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Rooms"
        android:layout_marginBottom="20dp" />

    <!-- Logout -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        />

</LinearLayout>
